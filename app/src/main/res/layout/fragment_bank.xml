<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <ImageView
                android:id="@+id/floatingActionButton"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="end"
                android:src="@drawable/call"
                android:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bank_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:errorTextColor="@color/secondary_peach"
                android:textColorHint="@color/text_black"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@color/theme_bg"
                app:boxStrokeColor="@color/select"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:counterTextColor="@color/text_black"
                app:hintTextColor="@color/text_black"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/bank_account_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_bank_acc"
                    android:text="@string/enter_bank_acc"
                    android:imeOptions="actionNext"
                    android:textColorHighlight="@color/text_black"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="none"
                    android:focusable="false"
                    android:windowSoftInputMode="stateHidden"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bank_acc_re"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:errorTextColor="@color/secondary_peach"
                android:textColorHint="@color/text_black"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@color/theme_bg"
                app:boxStrokeColor="@color/select"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:counterTextColor="@color/text_black"
                app:hintTextColor="@color/text_black"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/bank_account_re_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_bank_acc_re"
                    android:text="@string/enter_bank_acc_re"
                    android:imeOptions="actionNext"
                    android:textColorHighlight="@color/text_black"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="none"
                    android:focusable="false"
                    android:windowSoftInputMode="stateHidden"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bank_ifsc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                app:errorTextColor="@color/secondary_peach"
                android:textColorHint="@color/text_black"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@color/theme_bg"
                app:boxStrokeColor="@color/select"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:counterTextColor="@color/text_black"
                app:hintTextColor="@color/text_black"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/bank_ifsc_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_bank_ifsc"
                    android:text="@string/enter_bank_ifsc"
                    android:imeOptions="actionNext"
                    android:textColorHighlight="@color/text_black"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="none"
                    android:focusable="false"
                    android:windowSoftInputMode="stateHidden"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                app:errorTextColor="@color/secondary_peach"
                android:textColorHint="@color/text_black"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@color/theme_bg"
                app:boxStrokeColor="@color/select"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:counterTextColor="@color/text_black"
                app:hintTextColor="@color/text_black"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/bank_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_bank_name"
                    android:text="@string/enter_bank_name"
                    android:imeOptions="actionNext"
                    android:textColorHighlight="@color/text_black"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="none"
                    android:focusable="false"
                    android:windowSoftInputMode="stateHidden"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bank_holder_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                app:errorTextColor="@color/secondary_peach"
                android:textColorHint="@color/text_black"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@color/theme_bg"
                app:boxStrokeColor="@color/select"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:counterTextColor="@color/text_black"
                app:hintTextColor="@color/text_black"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/bank_holder_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_bank_holder"
                    android:text="@string/enter_bank_holder"
                    android:imeOptions="actionNext"
                    android:textColorHighlight="@color/text_black"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="none"
                    android:focusable="false"
                    android:windowSoftInputMode="stateHidden"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_btn"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:alpha="0.55"
                android:background="@drawable/button_gradient"
                android:enabled="false"
                android:paddingVertical="@dimen/_10sdp"
                android:text="@string/contin"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@+id/bank_name"/>

            <ProgressBar
                android:id="@+id/otp_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/primary_peach"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bottom_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>

    </ScrollView>

</layout>