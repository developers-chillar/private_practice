<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/root_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:background="@drawable/dr_home_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tvHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Hello!"
                android:layout_marginTop="48dp"
                android:layout_marginStart="27dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="TODO"
                android:src="@drawable/hamburgar"
                android:layout_marginTop="47dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/logo_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Doctor Name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:layout_marginStart="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvHello"
                app:layout_constraintTop_toBottomOf="@+id/tvHello" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-80dp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            app:layout_constraintTop_toBottomOf="@id/top_head">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/appointment_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/secondary_peach"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="10dp" overlapMode="soft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/white"
                app:strokeWidth="0.4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:background="@drawable/theme_bg_stroke">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:layout_margin="@dimen/_3sdp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/daydate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_bold"
                                android:textFontWeight="600"
                                android:textSize="13sp"
                                android:layout_marginTop="36dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#F76806"
                                android:fontFamily="@font/montserrat_bold"
                                android:textFontWeight="600"
                                android:textSize="42sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/year"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_bold"
                                android:textFontWeight="600"
                                android:textSize="13sp"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="51dp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:padding="@dimen/_5sdp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/ttl_apoint_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Today  Bookings"
                                android:fontFamily="@font/montserrat_bold"
                                android:textFontWeight="500"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/no_img"
                                app:layout_constraintTop_toTopOf="parent" />
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/today_date_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Monday 29,  2023"
                                android:textSize="@dimen/_15ssp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/completed_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Completed  :  "
                                android:fontFamily="@font/montserrat_bold"
                                android:textFontWeight="500"
                                android:textSize="13sp" />
                            <TextView
                                android:id="@+id/cancel_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pending    : "
                                android:fontFamily="@font/montserrat_bold"
                                android:textFontWeight="500"
                                android:textSize="13sp" />
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/direct_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="direct    : "
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/add_leave_border">

                <TextView
                    android:id="@+id/tvEditDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Date/Time"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textFontWeight="500"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="#F76806"
                    android:paddingVertical="13dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#F76806"
                    android:src="@drawable/orange_line"/>

                <TextView
                    android:id="@+id/addLeave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_leave"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textFontWeight="500"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="#F76806"
                    android:paddingVertical="13dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/continue_button">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:gravity="end">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/booking"
                            android:fontFamily="@font/montserrat_bold"
                            android:textFontWeight="500"
                            android:textSize="13sp"
                            android:paddingVertical="14dp"
                            android:textColor="@color/white"
                            android:gravity="end"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_share"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:visibility="gone"

                android:id="@+id/top_staff_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/head_top_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/appointment_card">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Clinic"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11sdp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/staff_all"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="view all"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/head_top_pic">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top_pic_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/head_tran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/appointment_card">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Todayâ€™s Bookings"
                        android:fontFamily="@font/montserrat_bold"
                        android:textFontWeight="500"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/booking_view_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="view all"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="84dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/head_tran">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tran_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="6"
                    tools:listitem="@layout/staff_adapter"/>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/otp_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:indeterminateTint="@color/primary_peach"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>

</layout>