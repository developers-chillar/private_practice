<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/root_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/head_tran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/staff_view_msg"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:alpha="0.55"
            android:background="@drawable/button_gradient"
            android:enabled="false"
            android:paddingVertical="@dimen/_5sdp"
            android:text="@string/add_staff_head"
            android:textAllCaps="false"
            android:textColor="@color/primary_blue"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:layout_gravity="end"
            app:layout_constraintTop_toBottomOf="@+id/head_tran"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_14sdp"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/head_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="staff name"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/head_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rate"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/head_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/head_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="update"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_18sdp"

                android:weightSum="2" >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/staff_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingTop="@dimen/_5sdp"
                    tools:itemCount="4"
                    tools:listitem="@layout/staff_adapter" />

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bottom_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/bottom_sheet_persistent" />
        </RelativeLayout>

    </LinearLayout>

</layout>